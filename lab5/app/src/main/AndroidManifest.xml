<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.komilfo.battleship">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.komilfo.battleship.App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity android:name="com.komilfo.battleship.activities.StatsActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.komilfo.battleship.activities.UserActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.komilfo.battleship.activities.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.komilfo.battleship.activities.ArrangeActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.komilfo.battleship.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>